<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-r from-purple-100 via-pink-50 to-purple-50 min-h-screen">
  <%- include('../partials/nav') %>
  
  <div class="bg-white shadow-xl rounded-2xl p-8 max-w-md w-full space-y-6 m-auto mt-10 border border-purple-200">
    <h2 class="text-3xl font-extrabold text-center text-purple-900">
      Login to your account
    </h2>
    <form class="space-y-5" action="/login" method="post">
      <% if(errors.length>0){ %>
<div
  class="bg-pink-100 border border-pink-300 text-purple-700 px-4 py-3 rounded-lg mb-4 flex items-start space-x-2"
  role="alert"
>
  <svg
    class="w-5 h-5 text-pink-400 mt-1 flex-shrink-0"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <circle
      cx="12"
      cy="12"
      r="10"
      stroke="currentColor"
      stroke-width="2"
      fill="#fbc2eb"
    />
    <path stroke="#a18cd1" stroke-width="2" d="M12 8v4m0 4h.01" />
  </svg>
  <div>
    <strong class="font-bold">Error!</strong>
    <ul class="list-disc list-inside text-sm mt-1">
      <% errors.forEach(error => { %>
      <li><%= error %></li>
      <% }); %>
    </ul>
  </div>
</div>
<% } %>

      <div>
        <label class="block text-sm font-medium text-purple-700">Email</label>
        <input
          type="email" name="email" value="<%= oldInput.email ? oldInput.email :"" %>"
          class="w-full mt-1 px-4 py-2 border border-purple-300 rounded-xl focus:ring-2 focus:ring-pink-400 focus:outline-none bg-purple-50 text-purple-900 placeholder-purple-400"
          placeholder="you@example.com"
        />
      </div>
      <div>
        <label class="block text-sm font-medium text-purple-700">Password</label>
        <input
          type="password"
          name="password"
          class="w-full mt-1 px-4 py-2 border border-purple-300 rounded-xl focus:ring-2 focus:ring-pink-400 focus:outline-none bg-purple-50 text-purple-900 placeholder-purple-400"
          placeholder="••••••••"
        />
      </div>
      <div class="flex items-center justify-between text-sm">
        <label class="flex items-center text-purple-700">
          <input type="checkbox" class="mr-2 accent-pink-400" />
          Remember me
        </label>
        
      </div>
      <button
        type="submit"
        class="w-full bg-gradient-to-r from-purple-400 via-pink-400 to-purple-300 hover:from-pink-400 hover:to-purple-400 text-white font-semibold py-2 px-4 rounded-xl transition shadow-lg"
      >
        Sign In
      </button>
    </form>
    <p class="text-sm text-center text-purple-600">
      Don't have an account?
      <a href="/signup" class="text-pink-500 hover:underline">Sign up</a>
    </p>
  </div>
</body>
</html>
