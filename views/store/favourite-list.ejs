<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-purple-300 via-pink-200 to-purple-100 min-h-screen">
  <%- include('../partials/nav') %>
  <main class="container mx-auto bg-white/80 shadow-2xl p-4 sm:p-6 md:p-8 mt-6 sm:mt-10 max-w-full md:max-w-8xl rounded-3xl">
    <h2 id="main-heading" class="text-center font-bold mb-6 text-purple-600 text-2xl sm:text-3xl tracking-wide">
      My favourites
    </h2>
    <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 sm:gap-6">
      <% favouriteHomes.forEach(home => { %>
        <div class="card flex flex-col bg-gradient-to-br from-purple-200 via-purple-100 to-pink-100 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 overflow-hidden relative group transform hover:-translate-y-1 hover:scale-102 max-w-xs mx-auto" data-id="<%= home._id %>">
          <img src="<%= home.photo %>" alt="House Photo" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300 rounded-t-xl" />
        <div class="p-2 sm:p-3 space-y-1 flex-1 flex flex-col justify-between">
          <h3 class="text-base sm:text-lg font-semibold text-purple-800">🏠 <%= home.houseName %></h3>
          <p class="text-purple-600 text-xs sm:text-sm">📍 <%= home.location %></p>
          <p class="text-purple-700 font-medium text-xs sm:text-sm">💰 ₹<%= home.price %></p>
          <p class="text-yellow-500 text-sm sm:text-base"><strong>⭐ Rating:</strong> <%= home.rating %></p>
            <form action="/favourites/delete/<%= home._id %>" method="POST" class="fav-remove-form">
              <button class="bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-700 hover:to-pink-700 active:scale-95 transition duration-300 text-white font-bold rounded-xl px-4 py-1 shadow-md w-full text-center focus:outline-none focus:ring-2 focus:ring-purple-300 text-xs sm:text-sm" type="submit">Remove</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </main>
  <%- include('../partials/footer') %>
  <script>
   
    // Animate heading on load
    document.addEventListener('DOMContentLoaded', () => {
      const heading = document.getElementById('main-heading');
      heading.animate([
        { opacity: 0, transform: 'translateY(-30px)' },
        { opacity: 1, transform: 'translateY(0)' }
      ], {
        duration: 700,
        fill: 'forwards'
      });
    });
  </script>
</body>
</html>
